{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "apps/shop-master-ui/dist/**",
        "apps/billing/dist/**",
        "apps/management-api/dist/**"
      ]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "generate": {
      "cache": false
    },
    "studio": {
      "cache": false
    },
    "migrate": {
      "cache": false
    }
  },
  "globalEnv": [
    "VITE_IMAGE_BASE_URL",
    "VITE_API_BASE_URL",
    "JWT_SECRET",
    "MANAGEMENT_API_PORT",
    "DATABASE_URL"
  ]
}
