{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "apps/user-management/dist/**",
        "apps/billing/dist/**"
      ]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "generate": {
      "cache": false
    },
    "studio": {
      "cache": false
    },
    "migrate": {
      "cache": false
    }
  },
  "globalEnv": [
    "JWT_SECRET",
    "DATABASE_URL",
    "REACT_APP_API_BASE_URL",
    "REACT_APP_IMAGE_BASE_URL",
    "API_PORT"
  ]
}
