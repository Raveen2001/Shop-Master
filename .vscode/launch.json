{
  "configurations": [
    {
      "name": "Edge 5173",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/shop-master-ui/src"
    },

    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node-terminal",
      "name": "User Management System",
      "request": "launch",
      "command": "pnpm run standalone",
      "cwd": "${workspaceFolder}/apps/user-management"
    }
  ]
}
