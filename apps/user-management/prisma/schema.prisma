// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Owner {
  id        String     @id @default(uuid())
  name      String
  phone     String
  email     String     @unique
  password  String
  image     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  employees Employee[]
  shops     Shop[]
}

model Shop {
  id          String     @id @default(uuid())
  name        String
  address     String
  phone       String
  email       String?
  website     String?
  description String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  image       String[]
  owner       Owner      @relation(fields: [ownerId], references: [id])
  ownerId     String
  employees   Employee[]
}

model Employee {
  id        String        @id @default(uuid())
  username  String        @unique
  phone     String
  password  String
  image     String
  address   String
  email     String?
  type      EMPLOYEE_TYPE
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  owner     Owner         @relation(fields: [ownerId], references: [id])
  ownerId   String
  shop      Shop          @relation(fields: [shopId], references: [id])
  shopId    String
}

enum EMPLOYEE_TYPE {
  MANAGER
  CASHIER
  ACCOUNTANT
  SALESMAN
  DELIVERY_PERSON
  PARCEL_COUNTER_DEVICE
  BILLING_DEVICE
}
