{
  "name": "billing-api",
  "version": "1.0.0",
  "description": "Billing API with thermal printer support using Express and escpos",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "dotenv -e .env.local -- ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "start": "dotenv -e .env.local -- node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@node-escpos/core": "^0.6.0",
    "@types/escpos": "^2.5.5",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "escpos": "^3.0.0-alpha.6",
    "escpos-network": "^3.0.0-alpha.1",
    "escpos-usb": "^3.0.0-alpha.4",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
